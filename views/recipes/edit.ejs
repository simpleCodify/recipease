<%- include('../partials/header.ejs'); %>

<!-- THIS IS GETTING THE RENDER's PROPERTIES FROM THE CONTROLLER -->

<h1> <%= recipe.title %></h1>

<div id="container">

<form action="/recipes/<%= recipe._id%>?_method=PUT" method="POST">
  <div class="d-flex p-4 bd-highlight">
      <div class="form-group w-50 p-4">
        <label>Title</label>
        <input type="text" class="form-control w-100 p-2 bd-highlight flex-fill mb-3 p-4" id="" name="title" placeholder="Name of Recipe">
  
          <label>Description</label>
          <input type="text" class="form-control p-2 bd-highlight flex-fill mb-3 p-4" id="" name="description" placeholder="Description of this Dish">
  
        <label>Preparation Time</label>
        <input type="text" class="form-control p-2 bd-highlight flex-fill mb-3 p-4" id="" name="prepTime" placeholder="In Minutes">
  
          <label>Instructions</label>
          <input type="text" class="form-control p-2 bd-highlight flex-fill mb-3 p-4" id="" name="instructions" placeholder="Instructions">
  
      </div>
      <div class="form-group w-50 p-4" style="padding: 20px auto;">
          <label>Image URL</label>
          <input type="text" class="form-control p-2 bd-highlight flex-fill mb-4 p-4" id="" name="imgURL" placeholder="Link to your Dish's Image">
          <div class="text-center" style="background-color: black; border-radius: 25px;">
            <img src="https://cdn.dribbble.com/users/1012566/screenshots/4187820/topic-2.jpg" class="bd-highlight flex-fill mb-2 p-4" style="width: auto; height: 15rem; border: 2px solid black;">
  
          </div>
        </div>
        
      
      
      
    </div>

    <div class="form-group text-center">
        <label>Select Ingredients</label>
        <select multiple class="form-control mx-auto w-25 text-center" id="exampleFormControlSelect2" name="ingredients">
          
          <% ingredient.forEach(i => { %>
            <option value="<%=i._id%>"><%=i.name%></option>
            <% }); %>
            
          </select>
        </div>
        
        <div class="text-center" style="margin: 0; padding: 0;">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        
    </div>
    

    </form>


  <!-- <form action="/recipes/<%=recipe._id%>/ingredient?_method=PUT" method="POST">
    

  </form> -->

</div>


