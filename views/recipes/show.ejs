<%- include('../partials/header.ejs'); %>

<!-- THIS IS GETTING THE RENDER's PROPERTIES FROM THE CONTROLLER -->

<h1> <%= recipe.title %></h1>
<h4>Preparation Time:</h4>
<h4> <%= recipe.prepTime %></h4>

<h4>Ingredients:</h4>
<% recipe.reqIngredients.forEach(i => { %>
    <ul>
        <li>
            <%= i.name %>
        </li>
    </ul>
<% }); %>

<h4>Instructions:</h4>
<% recipe.instructions.forEach(ins => { %>
<ul>
    <li>
        <%= ins %>
    </li>
</ul>
<% }); %>

<img src="<%=recipe.imgURL%>">




<a href="/recipes/<%=recipe._id%>/edit" class="btn btn-primary" role="button" aria-pressed="true">Edit Recipe</a>



        
<%- include('../partials/footer.ejs'); %>