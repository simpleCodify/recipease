<%- include('../partials/header.ejs'); %>

<h1><%=chef.name%>'s Recipes:</h1>
<div class="spacer" style="margin-top: 5%;"></div>


<div class="container-fluid text-center">
        <div class="col-lg-10" style="margin: 0 auto;">
        <% recipes.forEach(recipe => { %>
            <div class="card w-75 mt-2" style="margin: 0 auto; padding: 0; width: 100%; height: 15rem; border: 0;">
                <div class="card-horizontal text-center transclass2" style="box-shadow: 5px 5px black;border: 3px solid white; width: 100%; height: 15%; border-radius: 100px 0 100px 0;">
                    <div class="img-square-wrapper" style="overflow: hidden;">
                        <% if (recipe.imgURL.length == 0) recipe.imgURL = "https://cdn.dribbble.com/users/1012566/screenshots/4187820/topic-2.jpg"%>

                        <img class="card-img mx-auto d-block" src="<%=recipe.imgURL%>" alt="Card image cap" style="height: 100%; width: 400px; border-radius: 100px 0 100px 0;">
                    </div>
                    <div class="card-body" style="padding: 0;">
                        <h4 class="card-title"><%= recipe.title %></h4>
                        <p class="card-text">Recipe Preparation Time: <%= recipe.prepTime %></p>
                        <p class="card-text">Recipe Description: <%= recipe.description %></p>
                            <ion-icon name="star"></ion-icon><ion-icon name="star"></ion-icon><ion-icon name="star"></ion-icon><ion-icon name="star"></ion-icon><ion-icon name="star-half"></ion-icon>
                              <br>
                                <a href="/recipes/<%= recipe._id%>" class="btn btn-outline-primary text-center" style="width: 100px; height: 30px;"><ion-icon name="search"></ion-icon></a>
                                
                                <form action="/recipes/<%=recipe._id%>?_method=DELETE" class="mt-1" method="POST">
                                    <button class="btn btn-outline-danger text-center" type="submit" value="X" style="width: 100px; height: 30px;"><ion-icon name="pint"></ion-icon></button>
                                </form>
                          </div>
                    
                </div>
              </div>
              <% }); %>
        </div>
</div>


<%- include('../partials/footer.ejs'); %>