<h1>USERS PAGE TEST</h1>


<h3>My Recipes:</h3>

    <ul>
        <% recipes.forEach(r => { %>
            <li>
                <a href="/recipes/<%= r._id %>"> <%= r.title %> </a>
                <form action="/recipes/<%=r._id%>?_method=DELETE" method="POST">
                    <input type="submit" value="X">
                </form>
            </li>
        <% }); %>
    </ul>


    <h4>
        <%=chef.name%>
    </h4>

