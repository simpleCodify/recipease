<%- include('../partials/header.ejs'); %>

<h1 class="navbar-font" style="font-family: 'Dancing Script', cursive;"><%=chef.name%>'s Ingredients:</h1>
<br><br>

<div class="fridge container h-100 p-3" style="height: 100%; border-radius: 25px;">
    
    <div class="row text-center">
        <% chef.fridge.forEach(i => { %>
        <div class="col-6 col-md-2 transclass3" style="padding: 10px; border-radius: 25px; height: 8rem !important; background-color: white !important; margin: 3px auto;">
            <img class="ingredient-avatar " src="<%=i.thumbnail%>">
          <h4><%= i.name %></h4>
          
        </div>

      <% }); %>
    </div>
    
</div>

<div class="text-center mt-5">
    <a href="/chefs/<%=chef._id%>/fridge/edit" class="btn btn-primary text-center">Edit fridge</a>

</div>


<%- include('../partials/footer.ejs'); %>